general {
        output_format = "i3bar"
        # Since we are adding foreground colors now, we can set colors = true
        colors = true
        markup = pango
        interval = 5
}

order += "load"
order += "cpu_temperature 0"
order += "wireless wlp2s0"
order += "volume master"
order += "battery 0"
order += "time"

# Catppuccin Text Color: #cdd6f4
# Catppuccin Surface0 Background: #313244

load {
        # Added 'foreground=#cdd6f4' to the second span
        format = "<span background='#f9e2af' foreground='#4c4f69'>    </span><span background='#313244' foreground='#cdd6f4'>  %5min Load  </span>"
}

cpu_temperature 0 {
        # Added 'foreground=#cdd6f4' to the second span
        format = "<span background='#f38ba8' foreground='#4c4f69'>  🌡️  </span><span background='#313244' foreground='#cdd6f4'>  %degrees °C  </span>"
        path = "/sys/class/thermal/thermal_zone0/temp"
}

volume master {
        # Added 'foreground=#cdd6f4' to the second span
        format = "<span background='#cba6f7' foreground='#4c4f69'>  🔊  </span><span background='#313244' foreground='#cdd6f4'>  %volume  </span>"
        format_muted = "<span background='#cba6f7' foreground='#4c4f69'>  🔇  </span><span background='#313244' foreground='#cdd6f4'>  Muted  </span>"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

battery 0 {
        last_full_capacity = true
        # Added 'foreground=#cdd6f4' to the second span
        format = "<span background='#89dceb' foreground='#4c4f69'>  %status   </span><span background='#313244' foreground='#cdd6f4'>  %percentage   </span>"
        format_down = "No Battery"
        status_chr = "🔋⚡"
        status_bat = "🔋"
        status_unk = ""
        status_full = ""
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
        integer_battery_capacity = true
}

time {
        # Added 'foreground=#cdd6f4' to the second span
        format = "<span background='#94e2d5' foreground='#4c4f69'>   </span><span background='#313244' foreground='#cdd6f4'>  %b %d at %H:%M  </span>"
}
